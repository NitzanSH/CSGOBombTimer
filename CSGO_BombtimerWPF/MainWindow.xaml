        mc:Ignorable="d"
        Title="BombTimer 2
        " Height="231.212" Width="414.697" BorderBrush="Black" OpacityMask="Black" BorderThickness="0" Icon="Resources/c4icon.ico" Closed="Window_Closed" ResizeMode="CanMinimize">
